<Window x:Class="WpfEventsAndDelegates.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEventsAndDelegates"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <local:ValueUserControl x:Name="MyValueUserCotrol"
                                ValueChanged="MyValueUserControl_OnValueChanged">
        </local:ValueUserControl>
        <ScrollViewer>

            <TextBlock x:Name="MyTextBlock"></TextBlock>
        </ScrollViewer>
    </StackPanel>
</Window>