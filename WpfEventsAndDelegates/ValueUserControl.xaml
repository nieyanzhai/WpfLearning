<UserControl x:Class="WpfEventsAndDelegates.ValueUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfEventsAndDelegates"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="BtnAdd" Width="80"
                    Click="BtnAdd_OnClick">Add</Button>
            <Button x:Name="BtnSub" Width="80"
                    Click="BtnSub_OnClick">Sub</Button>
        </StackPanel>
        <Border BorderBrush="Black" BorderThickness="2" Width="160" HorizontalAlignment="Left"></Border>
        <TextBox x:Name="TBValue" Width="160" HorizontalAlignment="Left" FontSize="14" IsEnabled="False"
                 TextChanged="TBValue_OnTextChanged">50</TextBox>
    </StackPanel>
</UserControl>
