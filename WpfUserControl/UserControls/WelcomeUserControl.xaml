<UserControl x:Class="WpfUserControl.UserControls.WelcomeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfUserControl.UserControls"
             mc:Ignorable="d"
             x:Name="WelcomeUc"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Label Content="{Binding WelcomeText, ElementName=WelcomeUc }"></Label>
        <Button Content="Click Me" 
                Command="{Binding ShowMessageCommand, ElementName=WelcomeUc}"></Button>
    </StackPanel>
</UserControl>